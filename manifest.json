{
  "manifest_version": 2,

  "name": "SeatGeek",
  "description": "SeatGeek integration for online music players.",
  "version": "0.1",
  "permissions": [
    "http://api.seatgeek.com/2",
    "background",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "vendor/jquery-2.1.1.min.js",
        "vendor/jquery.sticky.js",
        "vendor/handlebars.js",
        "src/scripts/background.js",
        "src/scripts/app.js"
      ],
      "css": [
        "dist/styles/main.css"
      ],
      "run_at" : "document_idle"
    }
  ],

  "background": {
    "persistent" : false,
    "scripts": ["src/scripts/event.js"]
  },

  "browser_action": {
      "default_icon": "src/images/icon.png",
      "default_title": "Open SeatGeek"
  },
  "icons": {
      "48": "src/images/icon.png"
  },

  "web_accessible_resources": ["src/images/logo.png", "src/templates/template.html"]
}
